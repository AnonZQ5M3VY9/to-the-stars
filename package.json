{
  "name": "tts",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "docs-setup": "esno .vuepress/init.ts",
    "docs-dev": "vuepress dev",
    "docs-build": "pnpm docs-setup && vuepress build && rimraf .vuepress/dist/books/",
    "docs-deploy": "pnpm docs-build && liuli-cli deploy",
    "build": "esno src/main.ts",
    "postinstall": "npx simple-git-hooks"
  },
  "deploy": {
    "type": "gh-pages",
    "dist": ".vuepress/dist",
    "dest": "/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@liuli-util/async": "^3.3.0",
    "@liuli-util/cli": "^3.19.2",
    "@liuli-util/mdbook": "^0.1.1",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@vuepress/plugin-google-analytics": "^2.0.0-beta.36",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.3",
    "joplin-api": "^0.3.3",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.5",
    "vuepress-vite": "^2.0.0-beta.36"
  },
  "sync": [
    "prettier",
    "simplehooks"
  ],
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "description": "",
  "prettier": "@liuli-util/prettier-standard-config",
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
